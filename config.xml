<?xml version='1.0' encoding='utf-8'?>
<widget id="org.devgirl.amsterdam.guide" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PocketGuide</name>
    <description>
        A sample tour guide for PhoneGap Day Workshop 2015.
    </description>
    <author email="dev@cphonegap.com" href="http://phonegap.com">
        Holly Schinsky
    </author>
    <content src="index.html" />


    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="DisallowOverscroll" value="true" />

    <!-- Set global app icon -->
    <icon src="pgbot-love.png" />â€¨

    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ec4549"/>
    <preference name="StatusBarStyle" value="lightcontent" />

    <engine name="android" spec="^4.0.0" />
    <engine name="ios" spec="^3.8.0" />
    <plugin name="nl.x-services.plugins.toast" spec="https://github.com/Telerik-Verified-Plugins/Toast" />
    <plugin name="com.ionic.keyboard" spec="^1.0.4" />
    <plugin name="nl.x-services.plugins.socialsharing" spec="^4.3.18" />
    <plugin name="cordova-plugin-console" spec="^1.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="^1.0.0" />
    <plugin name="cordova-plugin-device" spec="^1.0.0" />
    <plugin name="cordova-plugin-dialogs" spec="^1.0.0" />
    <plugin name="cordova-plugin-network-information" spec="^1.0.0" />
    <plugin name="cordova-plugin-geolocation" spec="^1.0.0" />
</widget>
